---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/blog.fusoras/styles/style.css">
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<ul>
				<li><a href="/blog.fusoras/index.html">Home</a></li>
				<li><a href="/blog.fusoras/guide">Guias</a></li>
				<li><a href="/blog.fusoras/other">Otros</a></li>
			</ul>
		</nav>
		<slot />
	</body>
	<style>
			body {
				background-color: #3b3b3b;
				color: #fff;
			}
			a {
				color: #fff;
			}
	</style>
</html>