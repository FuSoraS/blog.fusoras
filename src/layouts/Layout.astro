---
interface Props {
	title, description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description}>
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<ul class="nav__list">
				<li class="nav__item"><a class="nav__link" href="/blog.fusoras/index.html">Home</a></li>
				<li class="nav__item"><a class="nav__link" href="/blog.fusoras/guide">Guias</a></li>
				<li class="nav__item"><a class="nav__link" href="/blog.fusoras/other">Otros</a></li>
			</ul>
		</nav>
		<slot />
	</body>
	<style>
			body {
				background-color: #3b3b3b;
				color: #fff;
				font-family: sans-serif;
			}
			.nav__list {
				list-style-type: none;
				display: flex;
				justify-content: center;
				align-items: center;
				flex-wrap: wrap;
			}
			.nav__item {
				margin: 10px;
			}
			.nav__link {
				color: #fff;
				text-decoration: none;
				transition: background-color 200ms;
				padding: 5px 10px;
				border-radius: 5px 10px;
			}
			.nav__link:hover {
				background-color: #fff;
				color: #000;
			}
	</style>
</html>